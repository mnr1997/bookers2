<h1>User info</h1>

<%= form_with model: @user do |f| %>

  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "name" %><br>
  <label for="inputName">Image</label><br>
  <%= f.file_field :profile_image, placeholder: "profile_image", accept: "image/*" %><br>
  <label for="inputName">Introduction</label><br>
  <%= f.text_area :introduction, placeholder: "introduction" %><br>
  <%= f.submit "Update User" %>
  
<% end %>
