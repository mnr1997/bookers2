<div class="row">
  <div class="col-md-3">
  <%= render 'new', book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h1>Books</h1>

    <table class="table table-striped">
      <tr><th>Title</th><th>Opinion</th></tr>
      <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book.id)%></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>